# ===========================================
# QASR ALSULTAN DASHBOARD - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your actual values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=production
PORT=3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB connection string
# Format: mongodb://username:password@host:port/database
# For Docker: mongodb://username:password@mongo:27017/database_name
DATABASE_URL=mongodb://qasr_admin:your_secure_password@mongo:27017/qasr_alsultan_db

# ===========================================
# MONGODB CREDENTIALS (for Docker Compose)
# ===========================================
MONGO_USERNAME=qasr_admin
MONGO_PASSWORD=your_secure_password_here
MONGO_DATABASE=qasr_alsultan_db

# ===========================================
# AUTHENTICATION (NextAuth.js)
# ===========================================
# Your domain URL (replace with your actual domain)
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your_super_secret_nextauth_key_here_minimum_32_characters

# ===========================================
# CLOUDINARY CONFIGURATION
# ===========================================
# Get these from your Cloudinary dashboard
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_upload_preset_name

# ===========================================
# SSL/HTTPS CONFIGURATION (Optional)
# ===========================================
# Your domain name for SSL certificate
DOMAIN_NAME=your-domain.com
EMAIL=your-email@domain.com

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Generate a strong secret key for JWT and other security features
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters

# ===========================================
# DEPLOYMENT SETTINGS
# ===========================================
# Docker compose project name
COMPOSE_PROJECT_NAME=qasr-alsultan-dashboard

# ===========================================
# MONITORING & LOGGING (Optional)
# ===========================================
# Enable detailed logging
DEBUG=false
LOG_LEVEL=info

# ===========================================
# NOTES
# ===========================================
# 1. Replace all placeholder values with your actual credentials
# 2. Use strong passwords (minimum 16 characters)
# 3. Keep this file secure and never commit it to version control
# 4. For production, use environment-specific values
# 5. Test your configuration before deploying
